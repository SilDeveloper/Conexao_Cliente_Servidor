rom socket import * #Disponibiliza funções relacionadas a sockets(portas)
host = ('0.0.0.0') #IP local da máquina onde será aberto a conexão
port = 50029 #porta em que o 'servidor' estará esperando a conexão
print(f'HOST: {host} , PORT {port}') #Mostra na tela o nome do host e da porta em que a conexão inicia
serv = socket(AF_INET, SOCK_STREAM) #cria a porta de conexão do tipo inet, streaming
serv.bind((host, port)) #inicia a conexão no host/porta indicados
serv.listen(5) #define o tempo de espera
while 1: #enquanto
    con, adr = serv.accept() #primeiro laço onde se espera a conexão ser estabelecida
    while 1: #enquanto
        msg = con.recv(1024) #segundo laço com a conexão ja estabelecida fica esperando a mensagem
        print(msg.decode()) #mostra na tela a mensagem decodificada
